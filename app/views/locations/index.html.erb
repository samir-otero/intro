<div class="sci-fi-bg mb-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-rick-green">Locations</h1>

    <!-- Search and Filter Form -->
    <div class="d-flex gap-2">
      <%= form_with url: locations_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
        <%= f.text_field :search, placeholder: "Search locations...", value: params[:search], class: "form-control", id: "search-field" %>
        <%= f.select :location_type, options_for_select([['All Types', '']] + @location_types.map { |t| [t, t] }, params[:location_type]), { prompt: false }, { class: "form-select" } %>
        <%= f.submit "Filter", class: "portal-btn" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-6">
    <p class="text-muted">Showing <span class="text-portal-blue"><%= @locations.count %></span> of <span class="text-rick-green"><%= @total_locations %></span> locations</p>
  </div>
  <div class="col-md-6 text-end">
    <% if params[:search].present? || params[:location_type].present? %>
      <%= link_to "Clear Filters", locations_path, class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% @locations.each do |location| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="rick-card h-100">
        <div class="card-body">
          <h5 class="card-title text-rick-green"><%= location.name %></h5>

          <div class="mb-2">
            <span class="badge bg-primary"><%= location.location_type %></span>
          </div>

          <p class="card-text">
            <strong class="text-portal-blue">Dimension:</strong> <span class="text-toxic-green"><%= location.dimension %></span><br>
            <small class="text-muted">
              <strong class="text-portal-blue">Residents:</strong> <span class="text-rick-green"><%= location.current_characters.count %></span><br>
              <strong class="text-portal-blue">Origin for:</strong> <span class="text-toxic-green"><%= location.origin_characters.count %></span> characters
            </small>
          </p>
        </div>

        <div class="card-footer bg-space-gradient">
          <%= link_to "View Details", location_path(location), class: "portal-btn btn-sm" %>
          <span class="text-muted float-end">
            <small class="text-portal-blue"><%= location.current_characters.count %> residents</small>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @locations.empty? %>
  <div class="alert alert-info text-center sci-fi-bg">
    <h4 class="text-rick-green">No locations found</h4>
    <p class="text-portal-blue">Try adjusting your search criteria or filters.</p>
  </div>
<% end %>

<!-- Pagination -->
<div class="d-flex justify-content-center">
  <%= paginate @locations if respond_to?(:paginate) %>
</div>