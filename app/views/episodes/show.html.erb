<div class="sci-fi-bg mb-4">
  <div class="row">
    <div class="col-md-8">
      <h1 class="text-rick-green neon-glow"><%= @episode.name %></h1>
      <div class="mb-3">
        <span class="badge bg-warning me-2"><%= @episode.episode_code %></span>
        <span class="badge bg-info"><%= @episode.air_date %></span>
      </div>
      <dl class="row">
        <dt class="col-sm-3 text-portal-blue">Episode Code:</dt>
        <dd class="col-sm-9 text-toxic-green"><%= @episode.episode_code %></dd>
        <dt class="col-sm-3 text-portal-blue">Air Date:</dt>
        <dd class="col-sm-9 text-toxic-green"><%= @episode.air_date %></dd>
        <dt class="col-sm-3 text-portal-blue">Characters:</dt>
        <dd class="col-sm-9 text-rick-green"><%= @episode.characters.count %></dd>
      </dl>
    </div>
    <div class="col-md-4">
      <div class="rick-card">
        <div class="card-header bg-space-gradient">
          <h5 class="text-rick-green">Episode Stats</h5>
        </div>
        <div class="card-body text-center">
          <div class="row">
            <div class="col-6">
              <h4 class="text-portal-blue pulse"><%= @episode.characters.count %></h4>
              <small class="text-muted">Total Characters</small>
            </div>
            <div class="col-6">
              <h4 class="text-toxic-green pulse"><%= @episode.characters.alive.count %></h4>
              <small class="text-muted">Alive Characters</small>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-6">
              <h4 class="text-danger pulse"><%= @episode.characters.dead.count %></h4>
              <small class="text-muted">Dead Characters</small>
            </div>
            <div class="col-6">
              <h4 class="text-morty-yellow pulse"><%= @episode.characters.where(species: 'Human').count %></h4>
              <small class="text-muted">Humans</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="sci-fi-bg">
      <h3 class="text-rick-green">Characters in this Episode (<span class="text-portal-blue"><%= @episode.characters.count %></span>)</h3>
      <% if @episode.characters.any? %>
        <div class="row">
          <% @episode.characters.each do |character| %>
            <div class="col-md-6 col-lg-4 mb-3">
              <div class="rick-card">
                <div class="card-body">
                  <div class="d-flex align-items-center">
                    <% if character.image_url.present? %>
                      <%= image_tag character.image_url, alt: character.name, class: "rounded-circle me-3 neon-glow", style: "width: 60px; height: 60px; object-fit: cover; border: 2px solid var(--rick-green);" %>
                    <% end %>
                    <div>
                      <h6 class="card-title mb-1 text-rick-green"><%= character.name %></h6>
                      <div class="mb-1">
                        <span class="badge bg-<%= character.status == 'Alive' ? 'success' : character.status == 'Dead' ? 'danger' : 'secondary' %> me-1 status-<%= character.status.downcase %>">
                          <%= character.status %>
                        </span>
                        <span class="badge bg-secondary"><%= character.species %></span>
                      </div>
                      <small class="text-muted">
                        <strong class="text-portal-blue">Origin:</strong> <span class="text-toxic-green"><%= character.origin_location&.name || 'Unknown' %></span><br>
                        <strong class="text-portal-blue">Current:</strong> <span class="text-toxic-green"><%= character.current_location&.name || 'Unknown' %></span>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No characters associated with this episode.</p>
      <% end %>
    </div>
  </div>
</div>