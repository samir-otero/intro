  <div class="col-md-6">
    <h3>Originally From Here (<%= @location.origin_characters.count %>)</h3>

    <% if @location.origin_characters.any? %>
      <div class="row">
        <% @location.origin_characters.limit(6).each do |character| %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <% if character.image_url.present? %>
                    <%= image_tag character.image_url, class: "rounded-circle me-3", style: "width: 50px; height: 50px; object-fit: cover;" %>
                  <% end %>
                  <div>
                    <h6 class="card-title mb-1"><%= character.name %></h6>
                    <small class="text-muted">
                      <span class="badge bg-<%= character.status == 'Alive' ? 'success' : character.status == 'Dead' ? 'danger' : 'secondary' %> me-1">
                        <%= character.status %>
                      </span>
                      <%= character.species %>
                    </small>
                  </div>
                </div>
                <div class="mt-2">
                  <%= link_to "View", character_path(character), class: "btn btn-sm btn-outline-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @location.origin_characters.count > 6 %>
        <div class="text-center">
          <%= link_to "View All #{@location.origin_characters.count} Originally From Here",
                      characters_path(origin_location: @location.id),
                      class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-info">
        No characters originally from this location.
      </div>
    <% end %>
  </div>
