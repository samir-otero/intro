<div class="sci-fi-bg">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="neon-glow">
      <i class="fas fa-users me-2"></i>Characters
    </h1>
    <!-- Search and Filter Form -->
    <div class="d-flex gap-2">
      <%= form_with url: characters_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
        <%= f.text_field :search, placeholder: "Search by name...", value: params[:search], class: "form-control", id: "search-field" %>
        <%= f.select :status, options_for_select([['All Statuses', ''], ['Alive', 'Alive'], ['Dead', 'Dead'], ['Unknown', 'unknown']], params[:status]), {}, { class: "form-select" } %>
        <%= f.select :species, options_for_select([['All Species', '']] + @species_options, params[:species]), {}, { class: "form-select" } %>
        <%= f.submit "Filter", class: "btn btn-primary portal-btn" %>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <p class="text-portal-blue">
        <i class="fas fa-chart-bar me-2"></i>Showing <%= @characters.count %> of <%= @total_characters %> characters
      </p>
    </div>
    <div class="col-md-6 text-end">
      <% if params[:search].present? || params[:status].present? || params[:species].present? %>
        <%= link_to "Clear Filters", characters_path, class: "btn btn-outline-secondary btn-sm portal-btn" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <% @characters.each do |character| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 rick-card">
        <% if character.image_url.present? %>
           <%= image_tag character.image_url, alt: character.name, class: "card-img-top", style: "width: 100%; height: 200px; object-fit: cover; object-position: center;" %>
        <% else %>
          <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="fas fa-user-astronaut fa-3x text-rick-green"></i>
          </div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= character.name %></h5>
          <div class="mb-2">
            <span class="badge bg-<%= character.status == 'Alive' ? 'success' : character.status == 'Dead' ? 'danger' : 'secondary' %>
                         status-<%= character.status.downcase %>">
              <i class="fas fa-<%= character.status == 'Alive' ? 'heartbeat' : character.status == 'Dead' ? 'skull' : 'question' %> me-1"></i>
              <%= character.status %>
            </span>
            <span class="badge bg-info">
              <i class="fas fa-dna me-1"></i><%= character.species %>
            </span>
          </div>
          <p class="card-text">
            <small class="text-muted">
              <strong><i class="fas fa-venus-mars me-1"></i>Gender:</strong> <%= character.gender %><br>
              <% if character.origin_location %>
                <strong><i class="fas fa-home me-1"></i>Origin:</strong> <%= character.origin_location.name %><br>
              <% end %>
              <% if character.current_location %>
                <strong><i class="fas fa-map-marker-alt me-1"></i>Location:</strong> <%= character.current_location.name %>
              <% end %>
            </small>
          </p>
        </div>
        <div class="card-footer bg-transparent">
          <%= link_to character_path(character), class: "btn btn-primary btn-sm portal-btn" do %>
            <i class="fas fa-eye me-1"></i>View Details
          <% end %>
          <span class="text-muted float-end">
            <small>
              <i class="fas fa-tv me-1"></i><%= character.character_episodes.count %> episodes
            </small>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @characters.empty? %>
  <div class="alert alert-info text-center sci-fi-bg">
    <h4><i class="fas fa-search me-2"></i>No characters found</h4>
    <p>Try adjusting your search criteria or filters.</p>
  </div>
<% end %>

<!-- Pagination -->
<div class="d-flex justify-content-center mt-4">
  <%= paginate @characters %>
</div>
